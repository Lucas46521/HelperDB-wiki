---
import CodeBlock from './CodeBlock.astro';

const { children, class: className, ...props } = Astro.props;

// Função para extrair conteúdo de código
function extractCode(content: any): string {
  if (typeof content === 'string') {
    return content;
  }

  if (Array.isArray(content)) {
    return content.map(extractCode).join('');
  }

  if (content && typeof content === 'object') {
    if (content.props?.children) {
      return extractCode(content.props.children);
    }
    if (content.children) {
      return extractCode(content.children);
    }
  }

  return '';
}

// Extrair o código
let code = '';
if (children) {
  code = extractCode(children).trim();
}

// Detectar linguagem
let language = 'text';
const classNames = [className, props.class].filter(Boolean).join(' ');
const languageMatch = classNames.match(/language-(\w+)/);
if (languageMatch) {
  language = languageMatch[1];
}

// Se há código válido, usar o CodeBlock, senão renderizar o slot
const hasValidCode = code && code.length > 0;
---

{hasValidCode ? (
  <CodeBlock code={code} language={language} />
) : (
  <slot />
)}