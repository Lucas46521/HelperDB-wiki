
---
import { Code } from 'astro:components';

export interface Props {
  code: string;
  language?: string;
  title?: string;
  showLineNumbers?: boolean;
}

const { code, language = 'text', title, showLineNumbers = false } = Astro.props;
---

<div class="custom-codeblock">
  <div class="code-header">
    <div class="window-buttons">
      <span class="dot red"></span>
      <span class="dot yellow"></span>
      <span class="dot green"></span>
    </div>
    {title && <span class="code-title">{title}</span>}
    <button class="copy-btn" data-code={code}>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
        <path d="m5 15-2-2v-8a2 2 0 0 1 2-2h8l2 2"></path>
      </svg>
    </button>
  </div>
  <div class="code-content">
    <Code 
      code={code} 
      lang={language} 
      theme="github-dark"
      showLineNumbers={showLineNumbers}
      wrap={true}
    />
  </div>
</div>

<style>
  .custom-codeblock {
    background-color: rgb(var(--card));
    border: 1px solid rgb(var(--border));
    border-radius: 12px;
    overflow: hidden;
    font-family: 'Fira Code', 'JetBrains Mono', 'Cascadia Code', monospace;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    margin: 1.5rem 0;
    max-width: 100%;
  }

  .code-header {
    background-color: rgb(var(--muted));
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid rgb(var(--border));
    position: relative;
  }

  .window-buttons {
    display: flex;
    gap: 6px;
    align-items: center;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    display: inline-block;
  }

  .red { 
    background-color: #ff5f56; 
  }
  
  .yellow { 
    background-color: #ffbd2e; 
  }
  
  .green { 
    background-color: #27c93f; 
  }

  .code-title {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    font-size: 0.875rem;
    color: rgb(var(--muted-foreground));
    font-weight: 500;
  }

  .copy-btn {
    background: rgba(var(--background), 0.8);
    border: 1px solid rgb(var(--border));
    color: rgb(var(--muted-foreground));
    border-radius: 6px;
    padding: 0.5rem;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
  }

  .copy-btn:hover {
    background-color: rgb(var(--background));
    color: rgb(var(--foreground));
    border-color: rgb(var(--primary));
  }

  .copy-btn.copied {
    color: #22c55e;
    border-color: #22c55e;
  }

  .copy-btn.copied svg {
    display: none;
  }

  .copy-btn.copied::after {
    content: "✓";
    font-size: 16px;
    font-weight: bold;
  }

  .code-content {
    position: relative;
  }

  /* Hide the default copy button from Expressive Code */
  .code-content :global(.copy) {
    display: none !important;
  }

  /* Remove margins from the embedded Code component */
  .code-content :global(.expressive-code) {
    margin: 0;
    border: none;
    border-radius: 0;
    box-shadow: none;
  }

  .code-content :global(.frame) {
    border: none;
    border-radius: 0;
  }

  /* Dark mode adjustments */
  [data-theme='dark'] .red {
    background-color: #ff6b68;
  }

  [data-theme='dark'] .yellow {
    background-color: #ffc445;
  }

  [data-theme='dark'] .green {
    background-color: #3dd267;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const copyButtons = document.querySelectorAll('.copy-btn');
    
    copyButtons.forEach(button => {
      button.addEventListener('click', async function() {
        const code = this.getAttribute('data-code');
        
        try {
          await navigator.clipboard.writeText(code);
          this.classList.add('copied');
          
          setTimeout(() => {
            this.classList.remove('copied');
          }, 2000);
        } catch (err) {
          console.error('Falha ao copiar código:', err);
        }
      });
    });
  });
</script>
